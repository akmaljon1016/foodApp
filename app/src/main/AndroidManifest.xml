<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_foodapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_foodapp_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.fragment.DetailsActivity"
            android:label="Details"
            android:screenOrientation="portrait"
            android:theme="@style/DetailsActivityStyle"></activity>
        <activity
            android:name=".ui.fragment.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>